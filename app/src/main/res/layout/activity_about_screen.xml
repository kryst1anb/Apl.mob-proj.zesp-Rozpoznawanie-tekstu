<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutScreen"
    android:background="@drawable/about_bcg">

    <include
        layout="@layout/toolbar"
        />

    <ImageView
        android:id="@+id/imageViewGlasses"
        android:layout_width="241dp"
        android:layout_height="153dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textDescribe"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="33dp"
        android:text="TextRekognition application can read the text from the photo."
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textContributors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGlasses" />

    <TextView
        android:id="@+id/textContributors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Contributors"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDescribe" />

    <TextView
        android:id="@+id/textMartaLewandowska"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:text="Marta Lewandowska"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textContributors" />

    <TextView
        android:id="@+id/textKrystianBarczak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:text="Krystian Barczak"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMartaLewandowska" />

    <TextView
        android:id="@+id/textKrzysztofDragon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:text="Krzysztof Dragon"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textMartaLewandowska"
        app:layout_constraintTop_toBottomOf="@+id/textContributors" />

    <TextView
        android:id="@+id/textSzymonBabula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="68dp"
        android:text="Szymon Babula"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textKrystianBarczak"
        app:layout_constraintTop_toBottomOf="@+id/textKrzysztofDragon" />

</androidx.constraintlayout.widget.ConstraintLayout>